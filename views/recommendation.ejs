<%- include('partials/header.ejs') %>   

<body>
<% if(locals.content){ %>

    <div class="container col-xxl-8 px-4 py-5 random">
        <% for (let i = 0; i < content.entry.length; i++){ %>
            <div class="row flex-lg-row-reverse align-items-center g-5 py-1">
                <div class="col-10 col-sm-8 col-lg-5">
                  <img src="<%= content.entry[i].images.jpg.image_url %>" class="d-block mx-lg-auto img-fluid" alt="random anime picture" width="300" height="300" loading="lazy">
                </div>
                <div class="col-lg-7">    
                  <h3 class="display-5 fw-bold lh-1 mb-3"><%= content.entry[i].title %></h3>
                </div>
              </div>
        <% } %>
      <div class="row flex-lg-row-reverse align-items-center g-5 py-1">
        <div class="container my-5">
            <div class="p-5 text-center rounded-3">
                <p class="lead">
                    <%= content.content %>
                </p>
            </div>
        </div>
      </div>
    </div>
<% }else{ %>
    <div class="container my-5">
        <div class="p-5 text-center bg-body-tertiary rounded-3">
          <p class="lead">
            Resource not found!!!
          </p>
        </div>
    </div>
<% } %>

</body>
<%- include('partials/footer.ejs') %>